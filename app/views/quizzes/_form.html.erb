<div>
  <%= form_with(model: quiz, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: quiz %>
  
       <%= f.fields_for :genre do |i| %> 
          <p>クイズのジャンル</p>
          <div class="btn-group btn-group-toggle w-100 mb-4" data-toggle="buttons">
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "0" %>子ども
            <% end %>
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "1" %>介護
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "2" %>障害
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "3" %>高齢
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "4" %>マイノリティ
            <% end %>
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "5" %>地域
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "6" %>ボランティア
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "7" %>多文化
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "8" %>人権
            <% end %>            
            <%= i.label :category, class: "btn btn-outline-secondary w-100" do %>
              <%= i.radio_button :category, "9" %>その他
            <% end %>

          </div>
        <% end %>
        
        <div class="row my-4">
          <div class="form-group col-sm-6">
            <p>クイズの内容</p>
            <%= f.text_area :content, class: 'form-control', rows: 7 %>
          </div>
          <div class="form-group col-sm-6">
            <p>クイズの答え</p>
            <%= f.text_area :answer, class: 'form-control', rows: 7 %>
          </div>
        </div>
        <div class="col-sm-2 py-4 my-4">
          <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        </div>
  <% end %>
</div>
