<% if current_user.favorite?(quiz) %>
    <%= form_with(model: current_user.favorites.find_by(quiz_id: quiz.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :quiz_id, quiz.id %>
        <%= f.submit "いいねを外す", class: "btn btn-outline-danger btn-sm" %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
        <%= hidden_field_tag :quiz_id, quiz.id %>
        <%= f.submit "いいねする", class: "btn btn-outline-primary btn-sm" %>
    <% end %>
<% end %>    