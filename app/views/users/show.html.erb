<div class="row">
    <div class="col-sm-7">
        <h2 class="my-3"><%= @user.name %>さんが作成したクイズ</h2>
        <%= render 'quizzes/quizzes', quizzes: @quizzes %>
    </div>
    <aside class="offset-sm-2 col-sm-3">
        <h2 class="my-3">ユーザー</h2>
        <div>
            <h5><%= @user.name %></h5>
            <img class="mr-2 rounded" src="<%= gravatar_url(@user, { size: 150 }) %>" alt="">
        </div>
        <p><%= link_to 'クイズを作成する', new_quiz_path, class: 'nav-link' %></p>
    </aside>
</div>